<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Ledger Statement</title>
  <style>
    body { font-family: Arial, sans-serif; font-size: 12px; }
    h2 { text-align: center; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { border: 1px solid #ccc; padding: 6px; text-align: left; }
    th { background: #f8f8f8; }
  </style>
</head>
<body>
  <h2>Ledger Statement - <%= companyCode %></h2>
  <% if (fromDate && toDate) { %>
    <p>Period: <%= fromDate %> to <%= toDate %></p>
  <% } %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Details</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Balance After</th>
      </tr>
    </thead>
    <tbody>
      <% entries.forEach(e => { %>
        <tr>
          <td><%= e.date %></td>
          <td><%= e.type %></td>
          <td>
            <% if (e.type === "Invoice") { %>
              Invoice #<%= e.invoiceNumber %>
            <% } else if (e.type === "Payment") { %>
              <%= e.method %> (<%= e.reference %>)
            <% } else if (e.type === "Allocation") { %>
              Settled Invoice #<%= e.invoiceId %>
            <% } else if (e.type === "Expense") { %>
              <%= e.vendor %> - <%= e.category %>
            <% } %>
          </td>
          <td>R<%= e.amount.toFixed(2) %></td>
          <td><%= e.status || "" %></td>
          <td>R<%= e.balanceAfter.toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
